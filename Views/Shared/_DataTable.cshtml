@model DataTableViewModel

<div class="datatable-container" data-table-id="@Model.TableId">
    <!-- Table Controls -->
    <div class="datatable-controls mb-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex gap-2">
                    <!-- Column Visibility -->
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-columns me-1"></i>Columns
                        </button>
                        <ul class="dropdown-menu column-toggle-menu">
                            @foreach (var column in Model.Columns)
                            {
                                <li>
                                    <label class="dropdown-item">
                                        <input type="checkbox" class="form-check-input me-2" 
                                               data-column="@column.Key" 
                                               @(column.Value.Visible ? "checked" : "")>
                                        @column.Value.Label
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>
                    
                    <!-- Saved Views -->
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-bookmark me-1"></i>Views
                        </button>
                        <ul class="dropdown-menu saved-views-menu">
                            <li><a class="dropdown-item" href="#" data-action="save-view">Save Current View</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" data-action="reset-view">Reset to Default</a></li>
                        </ul>
                    </div>
                    
                    <!-- Bulk Actions -->
                    <div class="dropdown" id="bulk-actions-dropdown" style="display: none;">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-tasks me-1"></i>Bulk Actions
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" data-action="bulk-status">Set Status</a></li>
                            <li><a class="dropdown-item" href="#" data-action="bulk-export">Export Selected</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <div class="d-flex gap-2 justify-content-end">
                    <!-- Export -->
                    <button class="btn btn-success btn-sm" data-action="export-csv">
                        <i class="fas fa-download me-1"></i>Export CSV
                    </button>
                    
                    <!-- Row Count -->
                    <span class="text-muted align-self-center">
                        <span id="selected-count">0</span> of <span id="total-count">0</span> selected
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="table-responsive datatable-wrapper">
        <table class="table table-striped table-hover datatable" id="@Model.TableId">
            <thead class="datatable-header sticky-top">
                <tr>
                    <th class="select-all-column" style="width: 40px;">
                        <input type="checkbox" class="form-check-input" id="select-all">
                    </th>
                    @foreach (var column in Model.Columns.Where(c => c.Value.Visible))
                    {
                        <th class="@(column.Value.Sortable ? "sortable" : "")" 
                            data-column="@column.Key"
                            data-sort="@column.Value.SortDirection">
                            @column.Value.Label
                            @if (column.Value.Sortable)
                            {
                                <i class="fas fa-sort ms-1"></i>
                            }
                        </th>
                    }
                    <th class="actions-column" style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody class="datatable-body">
                @foreach (var row in Model.Rows)
                {
                    <tr data-row-id="@row.Id" class="datatable-row">
                        <td class="select-column">
                            <input type="checkbox" class="form-check-input row-selector" value="@row.Id">
                        </td>
                        @foreach (var column in Model.Columns.Where(c => c.Value.Visible))
                        {
                            <td class="@(column.Value.Editable ? "editable" : "")" 
                                data-field="@column.Key"
                                data-value="@row.GetValue(column.Key)">
                                @if (column.Value.Editable)
                                {
                                    <span class="editable-display">@row.GetDisplayValue(column.Key)</span>
                                    <input type="text" class="form-control form-control-sm editable-input" 
                                           value="@row.GetValue(column.Key)" style="display: none;">
                                }
                                else
                                {
                                    @row.GetDisplayValue(column.Key)
                                }
                            </td>
                        }
                        <td class="actions-cell">
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary btn-sm" data-action="view" data-id="@row.Id">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-outline-secondary btn-sm" data-action="edit" data-id="@row.Id">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.Pagination != null)
    {
        <div class="datatable-pagination mt-3">
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="#" data-page="@(Model.Pagination.CurrentPage - 1)">Previous</a>
                    </li>
                    
                    @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                            <a class="page-link" href="#" data-page="@i">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="#" data-page="@(Model.Pagination.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<!-- Inline Edit Modal for Complex Fields -->
<div class="modal fade" id="inlineEditModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit <span id="editFieldName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="editFieldContent">
                    <!-- Dynamic content will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveEditBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

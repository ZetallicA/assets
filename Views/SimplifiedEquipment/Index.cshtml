@model AssetManagement.Controllers.PaginatedList<AssetManagement.Models.SimplifiedEquipment>

@{
    ViewData["Title"] = "Simplified Equipment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-0">Simplified Equipment</h1>
                    <p class="text-muted">Direct Excel-like equipment management</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Equipment
                    </a>
                    <a asp-action="Import" class="btn btn-info">
                        <i class="bi bi-upload"></i> Import from Excel
                    </a>
                    <a asp-action="Export" class="btn btn-success">
                        <i class="bi bi-file-earmark-excel"></i> Export to Excel
                    </a>
                </div>
            </div>

            <!-- Search and Filters -->
            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="searchString" class="form-label">Search</label>
                            <input type="text" class="form-control" id="searchString" name="searchString" 
                                   value="@ViewData["CurrentFilter"]" placeholder="Search any field...">
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Page Size</label>
                            <select class="form-select" id="pageSize" name="pageSize" onchange="this.form.submit()">
                                @{
                                    var pageSizeOptions = new[] { 10, 25, 50, 100 };
                                    var currentPageSize = ViewData["CurrentPageSize"] as int? ?? 20;
                                }
                                @foreach (var size in pageSizeOptions)
                                {
                                    if (size == currentPageSize)
                                    {
                                        <option value="@size" selected>@size</option>
                                    }
                                    else
                                    {
                                        <option value="@size">@size</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Clear
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Equipment Table -->
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                                                         <th>
                                         <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "asset_tag" ? "asset_tag_desc" : "asset_tag")" 
                                            asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                             Asset Tag
                                             @if (ViewData["CurrentSort"]?.ToString() == "asset_tag")
                                             {
                                                 <i class="bi bi-arrow-up"></i>
                                             }
                                             else if (ViewData["CurrentSort"]?.ToString() == "asset_tag_desc")
                                             {
                                                 <i class="bi bi-arrow-down"></i>
                                             }
                                         </a>
                                     </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "assigned_user" ? "assigned_user_desc" : "assigned_user")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Assigned To
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "category" ? "category_desc" : "category")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Category
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "department" ? "department_desc" : "department")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Department
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "location" ? "location_desc" : "location")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Location
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "floor" ? "floor_desc" : "floor")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Floor
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "status" ? "status_desc" : "status")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Status
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "net_name" ? "net_name_desc" : "net_name")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Net Name
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "manufacturer" ? "manufacturer_desc" : "manufacturer")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Manufacturer
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "model" ? "model_desc" : "model")" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                            Model
                                        </a>
                                    </th>
                                    <th>Phone</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Asset_Tag</strong>
                                            @if (!string.IsNullOrEmpty(item.Serial_Number))
                                            {
                                                <br><small class="text-muted">@item.Serial_Number</small>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Assigned_User_Name))
                                            {
                                                <div>@item.Assigned_User_Name</div>
                                                @if (!string.IsNullOrEmpty(item.Assigned_User_Email))
                                                {
                                                    <small class="text-muted">@item.Assigned_User_Email</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unassigned</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Category))
                                            {
                                                <span class="badge bg-primary">@item.Category</span>
                                            }
                                        </td>
                                        <td>@(item.Department ?? "N/A")</td>
                                        <td>@(item.Location ?? "N/A")</td>
                                        <td>@(item.Floor ?? "N/A")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Status))
                                            {
                                                <span class="badge bg-secondary">@item.Status</span>
                                            }
                                        </td>
                                        <td>@(item.Net_Name ?? "N/A")</td>
                                        <td>@(item.Manufacturer ?? "N/A")</td>
                                        <td>@(item.Model ?? "N/A")</td>
                                        <td>@(item.Phone_Number ?? "N/A")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted">
                    Showing @((Model.PageIndex - 1) * Model.Count + 1) to @(Model.PageIndex * Model.Count) of @Model.TotalCount entries
                </div>
                
                <nav aria-label="Equipment pagination">
                    <ul class="pagination pagination-sm mb-0">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" 
                                   asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" 
                                   asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link"><i class="bi bi-chevron-left"></i></span>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                        {
                            if (i == Model.PageIndex)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" 
                                       asp-route-pageNumber="@i" asp-route-currentFilter="@ViewData["CurrentFilter"]" 
                                       asp-route-pageSize="@ViewData["CurrentPageSize"]">@i</a>
                                </li>
                            }
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" 
                                   asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" 
                                   asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link"><i class="bi bi-chevron-right"></i></span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit form when search input changes
        document.getElementById('searchString').addEventListener('input', function() {
            if (this.value.length >= 3 || this.value.length === 0) {
                this.form.submit();
            }
        });
    </script>
}

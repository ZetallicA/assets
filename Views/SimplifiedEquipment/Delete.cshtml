@model AssetManagement.Models.SimplifiedEquipment

@{
    ViewData["Title"] = "Delete Equipment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-0">Delete Equipment</h1>
                    <p class="text-muted">Confirm equipment deletion</p>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
                <p>Are you sure you want to delete this equipment? This action cannot be undone.</p>
                <hr>
                <p class="mb-0">The equipment will be marked as inactive but the record will be preserved for audit purposes.</p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Equipment Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Serial Number</dt>
                                <dd class="col-sm-8">@(Model.Serial_Number ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Manufacturer</dt>
                                <dd class="col-sm-8">@(Model.Manufacturer ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Model</dt>
                                <dd class="col-sm-8">@(Model.Model ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Category))
                                    {
                                        <span class="badge bg-primary">@Model.Category</span>
                                    }
                                    else
                                    {
                                        <span>N/A</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Status))
                                    {
                                        <span class="badge bg-secondary">@Model.Status</span>
                                    }
                                    else
                                    {
                                        <span>N/A</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Assigned User</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Assigned_User_Name))
                                    {
                                        <div>@Model.Assigned_User_Name</div>
                                        @if (!string.IsNullOrEmpty(Model.Assigned_User_Email))
                                        {
                                            <small class="text-muted">@Model.Assigned_User_Email</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unassigned</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Department</dt>
                                <dd class="col-sm-8">@(Model.Department ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Location</dt>
                                <dd class="col-sm-8">@(Model.Location ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Floor</dt>
                                <dd class="col-sm-8">@(Model.Floor ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Desk</dt>
                                <dd class="col-sm-8">@(Model.Desk ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Net Name</dt>
                                <dd class="col-sm-8">@(Model.Net_Name ?? "N/A")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Created At</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>
                                
                                <dt class="col-sm-4">Created By</dt>
                                <dd class="col-sm-8">@Model.CreatedBy</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Updated At</dt>
                                <dd class="col-sm-8">@(Model.UpdatedAt?.ToString("MM/dd/yyyy HH:mm") ?? "Never")</dd>
                                
                                <dt class="col-sm-4">Updated By</dt>
                                <dd class="col-sm-8">@(Model.UpdatedBy ?? "N/A")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Equipment
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                            <div class="text-muted">
                                <small>This will mark the equipment as inactive</small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

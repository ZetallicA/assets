@model IEnumerable<Location>
@{
    ViewData["Title"] = "Locations";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-building me-2"></i>
                            Locations
                        </h3>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Add New Location
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No locations found. <a asp-action="Create">Create your first location</a>.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>Floor Plans</th>
                                        <th>Equipment</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var location in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@location.Name</strong>
                                                @if (!string.IsNullOrEmpty(location.Notes))
                                                {
                                                    <br><small class="text-muted">@location.Notes</small>
                                                }
                                            </td>
                                            <td>@location.Address</td>
                                            <td>@location.City</td>
                                            <td>@location.State</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @location.FloorPlans.Count(f => f.IsActive) floor plans
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @location.Equipment.Count(e => e.IsActive) items
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @location.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Location actions">
                                                    <a asp-action="Details" asp-route-id="@location.Id" 
                                                       class="btn btn-outline-primary" 
                                                       data-bs-toggle="tooltip" 
                                                       data-bs-placement="top" 
                                                       title="View location details and floor plans">
                                                        <i class="bi bi-eye"></i>
                                                        <span class="d-none d-sm-inline ms-1">View</span>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@location.Id" 
                                                       class="btn btn-outline-secondary" 
                                                       data-bs-toggle="tooltip" 
                                                       data-bs-placement="top" 
                                                       title="Edit location information">
                                                        <i class="bi bi-pencil"></i>
                                                        <span class="d-none d-sm-inline ms-1">Edit</span>
                                                    </a>
                                                    <a href="#" 
                                                       class="btn btn-outline-info" 
                                                       data-bs-toggle="tooltip" 
                                                       data-bs-placement="top" 
                                                       title="Manage floor plans for this location"
                                                       onclick="manageFloorPlans(@location.Id, '@location.Name')">
                                                        <i class="bi bi-building"></i>
                                                        <span class="d-none d-sm-inline ms-1">Floors</span>
                                                    </a>
                                                    <a href="#" 
                                                       class="btn btn-outline-success" 
                                                       data-bs-toggle="tooltip" 
                                                       data-bs-placement="top" 
                                                       title="View equipment at this location"
                                                       onclick="viewLocationEquipment(@location.Id, '@location.Name')">
                                                        <i class="bi bi-laptop"></i>
                                                        <span class="d-none d-sm-inline ms-1">Equipment</span>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-outline-danger" 
                                                            data-bs-toggle="tooltip" 
                                                            data-bs-placement="top" 
                                                            title="Delete this location (will deactivate floor plans and desks)"
                                                            onclick="deleteLocation(@location.Id, '@location.Name')">
                                                        <i class="bi bi-trash"></i>
                                                        <span class="d-none d-sm-inline ms-1">Delete</span>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function deleteLocation(id, name) {
            // Create a more sophisticated confirmation dialog
            const modal = document.createElement('div');
            modal.className = 'modal fade';
            modal.innerHTML = `
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                                Confirm Deletion
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete the location <strong>"${name}"</strong>?</p>
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Warning:</strong> This action will also deactivate all associated floor plans and desks.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" onclick="confirmDeleteLocation(${id})">
                                <i class="bi bi-trash me-2"></i>Delete Location
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            const bootstrapModal = new bootstrap.Modal(modal);
            bootstrapModal.show();
            
            modal.addEventListener('hidden.bs.modal', function() {
                document.body.removeChild(modal);
            });
        }

        function confirmDeleteLocation(id) {
            // Show loading state
            const modal = document.querySelector('.modal');
            const modalBody = modal.querySelector('.modal-body');
            const modalFooter = modal.querySelector('.modal-footer');
            
            modalBody.innerHTML = '<div class="text-center"><i class="bi bi-hourglass-split fs-1 text-primary"></i><p class="mt-2">Deleting location...</p></div>';
            modalFooter.innerHTML = '';
            
            $.post('@Url.Action("Delete")', { id: id })
                .done(function() {
                    modalBody.innerHTML = '<div class="text-center"><i class="bi bi-check-circle fs-1 text-success"></i><p class="mt-2">Location deleted successfully!</p></div>';
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                })
                .fail(function() {
                    modalBody.innerHTML = '<div class="text-center"><i class="bi bi-x-circle fs-1 text-danger"></i><p class="mt-2">Failed to delete location. Please try again.</p></div>';
                    modalFooter.innerHTML = '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>';
                });
        }

        function manageFloorPlans(locationId, locationName) {
            // Navigate to floor plans management for this location
            window.location.href = `/FloorPlan?locationId=${locationId}`;
        }

        function viewLocationEquipment(locationId, locationName) {
            // Navigate to equipment page filtered by this location
            window.location.href = `/Equipment?locationFilter=${encodeURIComponent(locationName)}`;
        }

        // Add hover effects for better UX
        document.addEventListener('DOMContentLoaded', function() {
            const actionButtons = document.querySelectorAll('.btn-group .btn');
            actionButtons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.transition = 'transform 0.2s ease';
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });
        });
    </script>
}

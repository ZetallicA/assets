@model IEnumerable<Location>
@{
    ViewData["Title"] = "Locations";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-building me-2"></i>
                            Locations
                        </h3>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Add New Location
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No locations found. <a asp-action="Create">Create your first location</a>.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>Floor Plans</th>
                                        <th>Equipment</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var location in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@location.Name</strong>
                                                @if (!string.IsNullOrEmpty(location.Notes))
                                                {
                                                    <br><small class="text-muted">@location.Notes</small>
                                                }
                                            </td>
                                            <td>@location.Address</td>
                                            <td>@location.City</td>
                                            <td>@location.State</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @location.FloorPlans.Count(f => f.IsActive) floor plans
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @location.Equipment.Count(e => e.IsActive) items
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @location.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@location.Id" 
                                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@location.Id" 
                                                       class="btn btn-sm btn-outline-secondary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="deleteLocation(@location.Id, '@location.Name')" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteLocation(id, name) {
            if (confirm(`Are you sure you want to delete the location "${name}"? This will also deactivate all associated floor plans and desks.`)) {
                $.post('@Url.Action("Delete")', { id: id })
                    .done(function() {
                        location.reload();
                    })
                    .fail(function() {
                        alert('Failed to delete location');
                    });
            }
        }
    </script>
}

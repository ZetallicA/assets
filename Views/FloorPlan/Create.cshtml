@model FloorPlan
@{
    ViewData["Title"] = "Create Floor Plan";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-plus me-2"></i>
                            Create New Floor Plan
                        </h3>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LocationId" class="form-label">Location *</label>
                                    <select asp-for="LocationId" class="form-select" required>
                                        <option value="">-- Select Location --</option>
                                        @foreach (var location in ViewBag.Locations)
                                        {
                                            <option value="@location.Value">@location.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="LocationId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FloorNumber" class="form-label">Floor Number *</label>
                                    <input asp-for="FloorNumber" class="form-control" placeholder="e.g., 1, 2, 3 or Ground, First, Second" />
                                    <span asp-validation-for="FloorNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FloorName" class="form-label">Floor Name</label>
                                    <input asp-for="FloorName" class="form-control" placeholder="e.g., Main Floor, Executive Floor" />
                                    <span asp-validation-for="FloorName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="imageFile" class="form-label">Floor Plan Image</label>
                                    <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" />
                                    <div class="form-text">Upload an image of the floor plan (optional). Supported formats: JPG, PNG, GIF.</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a description of this floor plan"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Create Floor Plan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // File input validation
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Please select a valid image file (JPG, PNG, or GIF).');
                    this.value = '';
                }
                
                // Check file size (max 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB.');
                    this.value = '';
                }
            }
        });
    </script>
}

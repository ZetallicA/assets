@model AssetManagement.Models.TechnologyConfiguration

@{
    ViewData["Title"] = "Delete Technology Configuration";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-trash"></i> Delete Technology Configuration</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="alert alert-danger">
                <h4><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h4>
                <p>Are you sure you want to delete this technology configuration? This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Equipment Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-laptop"></i> Equipment Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model?.Equipment != null)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">OATH Tag:</dt>
                                            <dd class="col-sm-8"><strong>@Model.Equipment.OATH_Tag</strong></dd>
                                            <dt class="col-sm-4">Model:</dt>
                                            <dd class="col-sm-8">@Model.Equipment.Model</dd>
                                            <dt class="col-sm-4">Serial Number:</dt>
                                            <dd class="col-sm-8">@Model.Equipment.Serial_Number</dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">Location:</dt>
                                            <dd class="col-sm-8">@(Model.Equipment.Building ?? "Not assigned")</dd>
                                            <dt class="col-sm-4">Floor:</dt>
                                            <dd class="col-sm-8">@(Model.Equipment.Floor ?? "Not assigned")</dd>
                                            <dt class="col-sm-4">Room:</dt>
                                            <dd class="col-sm-8">@(Model.Equipment.Room ?? "Not assigned")</dd>
                                        </dl>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> Equipment information not available.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Configuration Summary -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-gear-wide-connected"></i> Configuration Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Network Configuration</h6>
                                    <ul class="list-unstyled">
                                        @if (!string.IsNullOrEmpty(Model?.NetName))
                                        {
                                            <li><strong>Net Name:</strong> @Model.NetName</li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model?.IPv4Address))
                                        {
                                            <li><strong>IPv4:</strong> @Model.IPv4Address</li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model?.MACAddress))
                                        {
                                            <li><strong>MAC:</strong> <code>@Model.MACAddress</code></li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model?.SwitchName) || !string.IsNullOrEmpty(Model?.SwitchPort))
                                        {
                                            <li><strong>Switch:</strong> @(Model?.SwitchName ?? "")@(!string.IsNullOrEmpty(Model?.SwitchName) && !string.IsNullOrEmpty(Model?.SwitchPort) ? "/" : "")@(Model?.SwitchPort ?? "")</li>
                                        }
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6>Other Configuration</h6>
                                    <ul class="list-unstyled">
                                        @if (!string.IsNullOrEmpty(Model?.PhoneNumber))
                                        {
                                            <li><strong>Phone:</strong> @Model.PhoneNumber@(!string.IsNullOrEmpty(Model.Extension) ? $" x{Model.Extension}" : "")</li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model?.IMEI))
                                        {
                                            <li><strong>IMEI:</strong> @Model.IMEI</li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model?.License1))
                                        {
                                            <li><strong>License 1:</strong> @Model.License1</li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model?.License2))
                                        {
                                            <li><strong>License 2:</strong> @Model.License2</li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model?.ConfigurationNotes))
                            {
                                <h6>Configuration Notes</h6>
                                <p class="text-muted">@Model.ConfigurationNotes</p>
                            }
                        </div>
                    </div>

                    <!-- Deletion Form -->
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete Configuration
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Warning Panel -->
                <div class="col-lg-4">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Warning</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>This action will permanently delete:</strong></p>
                            <ul>
                                <li>All network configuration data</li>
                                <li>Phone and mobile configuration</li>
                                <li>License information</li>
                                <li>Configuration notes and history</li>
                            </ul>
                            <p class="text-danger"><strong>This action cannot be undone!</strong></p>
                            
                            <hr>
                            
                            <p><strong>The equipment record will remain intact.</strong> Only the technology configuration will be deleted.</p>
                        </div>
                    </div>

                    @if (Model?.LastUpdated.HasValue == true)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Last Updated</h5>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Date:</dt>
                                    <dd class="col-sm-8">@Model.LastUpdated.Value.ToString("MM/dd/yyyy hh:mm tt")</dd>
                                    <dt class="col-sm-4">By:</dt>
                                    <dd class="col-sm-8">@(Model.UpdatedBy ?? "System")</dd>
                                </dl>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
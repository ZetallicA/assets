@model AssetManagement.Models.TechnologyConfiguration

@{
    ViewData["Title"] = "Technology Configuration Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-gear-wide-connected"></i> Technology Configuration Details</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Equipment Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-laptop"></i> Equipment Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model?.Equipment != null)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">OATH Tag:</dt>
                                            <dd class="col-sm-8"><strong>@Model.Equipment.OATH_Tag</strong></dd>
                                            <dt class="col-sm-4">Model:</dt>
                                            <dd class="col-sm-8">@Model.Equipment.Model</dd>
                                            <dt class="col-sm-4">Serial Number:</dt>
                                            <dd class="col-sm-8">@Model.Equipment.Serial_Number</dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">Location:</dt>
                                            <dd class="col-sm-8">@(Model.Equipment.Building ?? "Not assigned")</dd>
                                            <dt class="col-sm-4">Floor:</dt>
                                            <dd class="col-sm-8">@(Model.Equipment.Floor ?? "Not assigned")</dd>
                                            <dt class="col-sm-4">Room:</dt>
                                            <dd class="col-sm-8">@(Model.Equipment.Room ?? "Not assigned")</dd>
                                        </dl>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> Equipment information not available.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Network Configuration -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-router"></i> Network Configuration</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">Net Name:</dt>
                                        <dd class="col-sm-8">@(Model?.NetName ?? "-")</dd>
                                        <dt class="col-sm-4">IPv4 Address:</dt>
                                        <dd class="col-sm-8">@(Model?.IPv4Address ?? "-")</dd>
                                        <dt class="col-sm-4">MAC Address:</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model?.MACAddress))
                                            {
                                                <code>@Model.MACAddress</code>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">Wall Port:</dt>
                                        <dd class="col-sm-8">@(Model?.WallPort ?? "-")</dd>
                                        <dt class="col-sm-4">Switch Name:</dt>
                                        <dd class="col-sm-8">@(Model?.SwitchName ?? "-")</dd>
                                        <dt class="col-sm-4">Switch Port:</dt>
                                        <dd class="col-sm-8">@(Model?.SwitchPort ?? "-")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Phone Configuration -->
                    @if (!string.IsNullOrEmpty(Model?.PhoneNumber) || !string.IsNullOrEmpty(Model?.Extension))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-telephone"></i> Phone Configuration</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">Phone Number:</dt>
                                            <dd class="col-sm-8">@(Model?.PhoneNumber ?? "-")</dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">Extension:</dt>
                                            <dd class="col-sm-8">@(Model?.Extension ?? "-")</dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Mobile Configuration -->
                    @if (!string.IsNullOrEmpty(Model?.IMEI) || !string.IsNullOrEmpty(Model?.SIMCardNumber) || !string.IsNullOrEmpty(Model?.Vendor))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-phone"></i> Mobile Configuration</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">IMEI:</dt>
                                            <dd class="col-sm-8">@(Model?.IMEI ?? "-")</dd>
                                            <dt class="col-sm-4">SIM Card:</dt>
                                            <dd class="col-sm-8">@(Model?.SIMCardNumber ?? "-")</dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-4">Vendor:</dt>
                                            <dd class="col-sm-8">@(Model?.Vendor ?? "-")</dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- License Information -->
                    @if (!string.IsNullOrEmpty(Model?.License1) || !string.IsNullOrEmpty(Model?.License2) || !string.IsNullOrEmpty(Model?.License3) || !string.IsNullOrEmpty(Model?.License4) || !string.IsNullOrEmpty(Model?.License5))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-key"></i> License Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            @if (!string.IsNullOrEmpty(Model?.License1))
                                            {
                                                <dt class="col-sm-4">License 1:</dt>
                                                <dd class="col-sm-8"><code>@Model.License1</code></dd>
                                            }
                                            @if (!string.IsNullOrEmpty(Model?.License2))
                                            {
                                                <dt class="col-sm-4">License 2:</dt>
                                                <dd class="col-sm-8"><code>@Model.License2</code></dd>
                                            }
                                            @if (!string.IsNullOrEmpty(Model?.License3))
                                            {
                                                <dt class="col-sm-4">License 3:</dt>
                                                <dd class="col-sm-8"><code>@Model.License3</code></dd>
                                            }
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            @if (!string.IsNullOrEmpty(Model?.License4))
                                            {
                                                <dt class="col-sm-4">License 4:</dt>
                                                <dd class="col-sm-8"><code>@Model.License4</code></dd>
                                            }
                                            @if (!string.IsNullOrEmpty(Model?.License5))
                                            {
                                                <dt class="col-sm-4">License 5:</dt>
                                                <dd class="col-sm-8"><code>@Model.License5</code></dd>
                                            }
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Configuration Notes -->
                    @if (!string.IsNullOrEmpty(Model?.ConfigurationNotes))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-journal-text"></i> Configuration Notes</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">@Model.ConfigurationNotes</p>
                            </div>
                        </div>
                    }
                </div>

                <!-- Action Panel -->
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-tools"></i> Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit Configuration
                                </a>
                                @if (Model?.Equipment != null)
                                {
                                    <a asp-controller="Equipment" asp-action="Details" asp-route-id="@Model.Equipment.Id" class="btn btn-info">
                                        <i class="bi bi-laptop"></i> View Equipment Details
                                    </a>
                                }
                                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger" 
                                   onclick="return confirm('Are you sure you want to delete this configuration?')">
                                    <i class="bi bi-trash"></i> Delete Configuration
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Update Information -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Update Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model?.LastUpdated.HasValue == true)
                            {
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Last Updated:</dt>
                                    <dd class="col-sm-8">@Model.LastUpdated.Value.ToString("MM/dd/yyyy hh:mm tt")</dd>
                                    <dt class="col-sm-4">Updated By:</dt>
                                    <dd class="col-sm-8">@(Model.UpdatedBy ?? "System")</dd>
                                </dl>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No update information available.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model AssetManagement.Models.Equipment

@{
    ViewData["Title"] = "Delete Equipment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Equipment</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this equipment?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">OATH Tag</dt>
                        <dd class="col-sm-9">@Model.OATH_Tag</dd>

                        <dt class="col-sm-3">Serial Number</dt>
                        <dd class="col-sm-9">@Model.Serial_Number</dd>

                        <dt class="col-sm-3">Asset Tag</dt>
                        <dd class="col-sm-9">@Model.Asset_Tag</dd>

                        <dt class="col-sm-3">Model</dt>
                        <dd class="col-sm-9">@Model.Model</dd>

                        <dt class="col-sm-3">Manufacturer</dt>
                        <dd class="col-sm-9">@Model.Manufacturer</dd>

                        <dt class="col-sm-3">Service Tag</dt>
                        <dd class="col-sm-9">@Model.Service_Tag</dd>

                        @if (Model.Purchase_Date.HasValue)
                        {
                            <dt class="col-sm-3">Purchase Date</dt>
                            <dd class="col-sm-9">@Model.Purchase_Date.Value.ToShortDateString()</dd>
                        }

                        @if (Model.Warranty_Expiry.HasValue)
                        {
                            <dt class="col-sm-3">Warranty Expiration</dt>
                            <dd class="col-sm-9">@Model.Warranty_Expiry.Value.ToShortDateString()</dd>
                        }

                        @if (Model.Purchase_Cost.HasValue)
                        {
                            <dt class="col-sm-3">Purchase Cost</dt>
                            <dd class="col-sm-9">@Model.Purchase_Cost.Value.ToString("C")</dd>
                        }

                        <dt class="col-sm-3">Notes</dt>
                        <dd class="col-sm-9">@Model.Notes</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

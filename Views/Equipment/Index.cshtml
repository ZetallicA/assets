                                    if (dept == ViewData["DepartmentFilter"]?.ToString())
                                    {
                                        <option value="@dept" selected>@dept</option>
                                    }
                                    else
                                    {
                                        <option value="@dept">@dept</option>
                                    }
                                }
                            </select>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>


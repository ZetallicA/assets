@model List<Location>
@{
    ViewData["Title"] = "Interactive Maps";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-map me-2"></i>
                        Interactive Floor Plans
                    </h3>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No locations found. Please add locations and floor plans to view interactive maps.
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var location in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-building me-2"></i>
                                                @location.Name
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            @if (location.Address != null)
                                            {
                                                <p class="text-muted mb-2">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    @location.Address
                                                </p>
                                            }
                                            
                                            @if (location.FloorPlans.Any())
                                            {
                                                <h6 class="mb-3">Floor Plans:</h6>
                                                <div class="list-group list-group-flush">
                                                    @foreach (var floorPlan in location.FloorPlans.Where(f => f.IsActive))
                                                    {
                                                        <a href="@Url.Action("FloorPlan", new { id = floorPlan.Id })" 
                                                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <i class="fas fa-layer-group me-2"></i>
                                                                <strong>@floorPlan.FloorNumber</strong>
                                                                @if (!string.IsNullOrEmpty(floorPlan.FloorName))
                                                                {
                                                                    <span class="text-muted">- @floorPlan.FloorName</span>
                                                                }
                                                            </div>
                                                            <span class="badge bg-primary rounded-pill">
                                                                @floorPlan.Desks.Count(d => d.IsActive) desks
                                                            </span>
                                                        </a>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-warning mb-0">
                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                    No floor plans available for this location.
                                                </div>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    Created: @location.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                                <a href="@Url.Action("FloorPlan", new { id = location.FloorPlans.FirstOrDefault()?.Id })" 
                                                   class="btn btn-sm btn-primary @(location.FloorPlans.Any() ? "" : "disabled")">
                                                    <i class="fas fa-eye me-1"></i>
                                                    View Map
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any interactive features here
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
